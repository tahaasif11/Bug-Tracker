<div class="signup-container">
  <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, 
    url: registration_path(resource_name)) do |f| %>


      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "email" %>

        <% if resource.errors[:name].any? %>
          <p class="error-message">
            Name <%= resource.errors[:name].join(", ") %>
          </p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>

        <% if resource.errors[:email].any? %>
          <p class="error-message">
            Email <%= resource.errors[:email].join(", ") %>
          </p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>

        <% if resource.errors[:password].any? %>
          <p class="error-message">
            password <%= resource.errors[:password].join(", ") %>
          </p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :password_confirmation %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>

        <% if resource.errors[:password_confirmation].any? %>
          <p class="error-message">
            password_confirmation <%= resource.errors[:password_confirmation].join(", ") %>
          </p>
        <% end %>
      </div>

      <div class="field">
        <%= f.label :type %><br />
        <%= f.select :user_type, User.user_types.keys %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
  <% end %>
</div>

<%= render "devise/shared/links" %>
<h1 align="center"><%=@project.name%> project </h1>
<h3 align="center">created by: <%= @project.manager.name%></h3> 
<h6 align="center">description: <%= @project.description%></h6> 
<hr class="line">
<h3 align="center">Associated Team to this Project</h3>
<h4 align="center">Developer</h4>

<% @project_users.each do |project_user|%>
  <% if project_user.user.typee=="developer" %>
      <h6 align="center">name: <%= project_user.user.name%></h6> 
  <%end%>
<%end%>

<h4 align="center">Quality Assurance</h4>
<% @project_users.each do |project_user|%>
  <% if project_user.user.typee=="qa"%>
  <h6 align="center">name: <%= project_user.user.name%></h6> 
  <%end%>
<%end%>

<hr class="line">
<h3 align="center">Bugs</h3>

<% if current_user.typee!="developer"%>
    <% @projectbugs=@project.bugs%>
  <%else%>
  <% @projectbugs=current_user.bugs%>
<%end%>


<% @projectbugs.each do |project_bug|%>

  <h5 align="center">name: <%=link_to project_bug.title,bug_path(project_bug)%></h5> 
  <h6 align="center">description: <%= project_bug.description%></h6> 
  <h6 align="center">status: <%= project_bug.status%></h6> 
  <div class="button-group" align="center">
    <h6 align="center"> <%= link_to "edit bug",edit_bug_path(project_bug),class: "btn btn-primary btn-sm"%></h6> 
    <h6 align="center"> <%= button_to "delete bug",bug_path(project_bug),method: :delete, data: { confirm: "Are you sure you want to delete this bug?" },class: "btn btn-primary btn-sm"%></h6> 
  </div>
<%end%>

<hr class="line">
<div class="button-group" align="center">
 <%= link_to "add bug",new_project_bug_path(@project.id),class: "btn btn-primary btn-lg"%>
<%= link_to "edit project",edit_project_path(@project.id),class: "btn btn-primary btn-lg"%>
<%= button_to "delete project",project_path(),method: :delete, data: { confirm: "Are you sure you want to delete this project?" },class: "btn btn-primary btn-lg"%>
</div>

